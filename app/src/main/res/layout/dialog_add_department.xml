<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="490dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM PHÒNG BAN MỚI"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="#F50057"
                android:layout_gravity="center" />

            <TextView
                android:id="@+id/DialogAddPB_tvTenKhoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/nunito"
                android:visibility="visible"
                android:text="Khoa: CÔNG NGHỆ THÔNG TIN"
                android:textColor="#2F80ED"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Login_tvDN"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunito"
                android:text="Mã phòng ban"
                android:textColor="#2F80ED"
                android:textSize="20sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardElevation="5dp"
                android:layout_marginTop="6dp"
                app:strokeColor ="#2F80ED"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/DialogAddPB_edtMaPB"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_key"
                    android:hint="Aa"
                    android:background="@drawable/rounded2" />
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Login_tvDN"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunito"
                android:text="Tên phòng ban"
                android:textColor="#2F80ED"
                android:textSize="20sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardElevation="5dp"
                android:layout_marginTop="6dp"
                app:strokeColor ="#2F80ED"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp">

                <EditText
                    android:id="@+id/DialogAddPB_edtTenPB"
                    android:padding="10dp"
                    android:drawablePadding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:drawableLeft="@drawable/ic_bookmark"
                    android:hint="Aa"
                    android:background="@drawable/rounded2" />
            </com.google.android.material.card.MaterialCardView>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                android:background="@drawable/gradient1"
                app:cardElevation="10dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="50dp">

                <Button
                    android:id="@+id/DialogAddPB_btnThem"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient1"
                    android:text="xong"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito"
                    android:longClickable="false" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>