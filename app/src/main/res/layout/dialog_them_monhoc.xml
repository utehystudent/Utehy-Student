<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="480dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:padding="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM MÔN HỌC"
                android:fontFamily="@font/nunito"
                android:textAllCaps="true"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:layout_gravity="center"
                android:textColor="#F50057"></TextView>

            <TextView
                android:id="@+id/dialogThemMH_tvTenKhoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Khoa: CÔNG NGHỆ THÔNG TIN"
                android:layout_marginTop="30dp"
                android:textSize="20sp"
                android:fontFamily="@font/nunito"></TextView>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Mã môn học">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialogThemMH_edtMaMH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Tên môn học">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialogThemMH_edtTenMH"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:hint="Số tín chỉ">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/dialogThemMH_edtSoTC"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="numberDecimal"/>

            </com.google.android.material.textfield.TextInputLayout>

            <Button
                android:id="@+id/dialogThemMH_btnXong"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:background="@drawable/gradient1"
                android:layout_marginTop="50dp"
                android:text="XONG"
                android:textColor="#fff"
                android:textSize="16sp"></Button>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>