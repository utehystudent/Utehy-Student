<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/row_subject_absent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/row_subject_absent_constraint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ProgressBar
            android:id="@+id/row_subject_absent_progressBar"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_gravity="center"
            android:layout_marginTop="36dp"
            android:indeterminateOnly="false"
            android:progressDrawable="@drawable/circle"
            tools:ignore="MissingConstraints"></ProgressBar>

        <TextView
            android:id="@+id/row_subject_absent_tvProgress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:textColor="#FF3D00"
            android:background="#DFD9D9"
            android:fontFamily="@font/nunito"
            app:layout_constraintBottom_toBottomOf="@+id/row_subject_absent_progressBar"
            app:layout_constraintEnd_toEndOf="@+id/row_subject_absent_progressBar"
            app:layout_constraintStart_toStartOf="@+id/row_subject_absent_progressBar"
            app:layout_constraintTop_toTopOf="@+id/row_subject_absent_progressBar"></TextView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/row_subject_absent_tvSubjectName"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@+id/row_subject_absent_constraint"
        android:background="#DFD9D9"
        android:fontFamily="@font/roboto_regular"
        android:maxLines="1"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/row_subject_absent_imgInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/row_subject_absent_tvSubjectName" />

</RelativeLayout>