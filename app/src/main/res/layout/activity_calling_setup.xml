<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.CallingSetupActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/CallingSetup_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:titleTextColor="#2F80ED" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E3DDDD" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/CallingSetup_imgAvt"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        app:civ_border_width="1dp"
        app:civ_border_color="#C8C0C0"
        android:src="@drawable/ic_student"></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ảnh đại diện"
        android:layout_gravity="center"
        android:fontFamily="@font/nunito"
        android:textSize="20sp"
        android:layout_marginTop="20dp"></TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="70dp"
        android:hint="Mã cuộc họp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/CallingSetup_edtMaHop"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:hint="Tên hiển thị">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/CallingSetup_edtTen"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/CallingSetup_imgMic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_mic_off"></ImageView>

        <ImageView
            android:id="@+id/CallingSetup_imgCam"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/ic_cam_off"></ImageView>
    </LinearLayout>

    <Button
        android:id="@+id/CallingSetup_btnXong"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginHorizontal="30dp"
        android:text="XONG"
        android:background="@drawable/gradient1"
        android:textColor="#fff"
        android:layout_marginTop="30dp"></Button>
</LinearLayout>