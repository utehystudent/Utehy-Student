<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:tag="lichhoatdong"
    android:orientation="vertical"
    tools:context=".fragments.LichHoatDongFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lịch hoạt động"
        android:textSize="30sp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/nunito"
        android:textColor="#2F80ED"
        android:textStyle="bold"
        ></TextView>

    <com.applandeo.materialcalendarview.CalendarView
        android:id="@+id/ActivitySchedule_calendar"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/ActivitySchedule_tvNgay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:fontFamily="@font/nunito"
        android:visibility="invisible"
        android:textColor="#3D5AFE"
        android:text="Nội dung:"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/ActivitySchedule_tvContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/nunito_light"
        android:autoLink="all"
        android:textColor="#2E2E2E"
        android:textSize="18sp"/>
</LinearLayout>