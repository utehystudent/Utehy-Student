<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:src="@drawable/book"></ImageView>

        <TextView
            android:id="@+id/bottomSheetSubject_tvTenMH"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/nunito"
            android:maxLines="2"
            android:text="Lập trình cơ bản"
            android:textAlignment="center"
            android:textColor="#2F80ED"
            android:textSize="18sp"></TextView>

        <TextView
            android:id="@+id/bottomSheetSubject_tvSoTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nunito"
            android:text="Số TC: 4"
            android:textSize="18sp"></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/bottomSheetSubject_btnXoa"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_trash"
        android:drawablePadding="15dp"
        android:textAllCaps="true"
        android:fontFamily="@font/nunito_light"
        android:paddingLeft="15dp"
        android:text="Xóa khỏi danh sách"
        android:textAlignment="textStart"></Button>

    <Button
        android:id="@+id/bottomSheetSubject_btnXemLS"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@null"
        android:drawableLeft="@drawable/ic_history"
        android:drawablePadding="15dp"
        android:fontFamily="@font/nunito_light"
        android:textAllCaps="true"
        android:paddingLeft="15dp"
        android:text="Xem lịch sử điểm danh"
        android:textAlignment="textStart"></Button>
</LinearLayout>