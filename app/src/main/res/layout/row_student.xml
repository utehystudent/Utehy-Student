<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rowStudent_swipeRevealLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    app:dragEdge="right"
    app:mode="same_level">

    <!-- Your secondary layout here -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:cardElevation="2dp">
        <LinearLayout
            android:id="@+id/rowStudent_layoutDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:background="#FFFFFF"
                android:layout_marginRight="10dp"
                android:src="@drawable/ic_edit2"
                android:textAlignment="center"></ImageView>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerInParent="true"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="10dp"
                android:background="#FFFFFF"
                android:src="@drawable/ic_delete"
                android:textAlignment="center"></ImageView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Your main layout here -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:padding="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="35dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/rowStudent_imgAvt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/utehy_logo"
                    android:layout_gravity="center"
                    android:scaleType="center"></ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/rowStudent_tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:text="Hoàng Việt"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"
                    android:textColor="#2F80ED"
                    android:textSize="23sp"></TextView>

                <TextView
                    android:id="@+id/rowStudent_tvID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="MSV: 10118456"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="18sp"></TextView>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</com.chauthai.swipereveallayout.SwipeRevealLayout>