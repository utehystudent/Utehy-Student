<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="380dp"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="390dp"
        app:cardElevation="15dp"
        app:cardCornerRadius="15dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="THÊM HOẠT ĐỘNG"
                android:fontFamily="@font/nunito"
                android:layout_marginTop="10dp"
                android:textSize="25sp"
                android:textColor="#F50057"
                android:layout_gravity="center"></TextView>

            <TextView
                android:id="@+id/dialogThemHoatDong_tvNgay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Login_tvDN"
                android:layout_marginTop="35dp"
                android:fontFamily="@font/nunito"
                android:text="Ngày: 01/06/2022"
                android:textColor="#2F80ED"
                android:textSize="20sp"></TextView>

            <TextView
                android:id="@+id/DialogAddSubject_tvMaMH"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/nunito"
                android:visibility="visible"
                android:text="Nội dung:"
                android:textColor="#2F80ED"
                android:textSize="20sp"></TextView>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/Login_cardTK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="5dp"
                android:layout_marginTop="10dp"
                app:strokeColor ="#2F80ED"
                app:strokeWidth="1dp"
                app:cardCornerRadius="10dp">
                <EditText
                    android:id="@+id/dialogThemHoatDong_edtND"
                    android:background="@drawable/bo_edt"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:padding="10dp"
                    android:hint="Nội dung hoạt động"
                    android:gravity="top"
                    ></EditText>
            </com.google.android.material.card.MaterialCardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="55dp"
                app:cardCornerRadius="10dp"
                android:background="@drawable/gradient1"
                app:cardElevation="10dp"
                android:layout_gravity="bottom"
                android:layout_marginTop="30dp">
                <Button
                    android:id="@+id/dialogThemHoatDong_btnXong"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/gradient1"
                    android:text="xong"
                    android:textColor="#fff"
                    android:textSize="18sp"
                    android:fontFamily="@font/nunito"
                    android:longClickable="false"
                    ></Button>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>