<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:weightSum="6"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="2dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardCornerRadius="35dp"
                android:innerRadius="0dp"
                android:shape="ring"
                android:thicknessRatio="1.9"
                app:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/rowStudentAttendance_imgAvt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/utehy_logo"
                    android:layout_gravity="center"
                    android:scaleType="center"></ImageView>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_weight="4.5"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15dp">

                <TextView
                    android:id="@+id/rowStudentAttendance_tvName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:maxLines="1"
                    android:text="Hoàng Việt"
                    android:textAllCaps="false"
                    android:layout_marginTop="5dp"
                    android:textColor="#2F80ED"
                    android:textSize="23sp"></TextView>

                <TextView
                    android:id="@+id/rowStudentAttendance_tvID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto_regular"
                    android:text="MSV: 10118456"
                    android:textAllCaps="false"
                    android:textColor="#000"
                    android:textSize="18sp"></TextView>
            </LinearLayout>

            <CheckBox
                android:id="@+id/rowStudentAttendance_ckb"
                android:layout_weight="0.5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"></CheckBox>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>